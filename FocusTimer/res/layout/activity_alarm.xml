<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent" >

    <LinearLayout
        android:layout_width="wrap_content"
            android:layout_marginRight="15dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <com.mobsandgeeks.ui.TypefaceTextView
            android:layout_marginTop="10dp"
            android:id="@+id/btn_alarm_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_x_close_30dp_3x"
            geekui:customTypeface="fonts/NanumBarunGothic.ttf" />

        <com.mobsandgeeks.ui.TypefaceTextView
            android:id="@+id/btn_alarm_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/selector_alarmbtn"
            android:gravity="center"
            android:text="없음"
            android:textColor="@drawable/selector_alarmbtn_textcolor"
            android:textSize="14dp"
            geekui:customTypeface="fonts/NanumBarunGothic.ttf" />

        <com.mobsandgeeks.ui.TypefaceTextView
            android:id="@+id/btn_alarm_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/selector_alarmbtn"
            android:gravity="center"
            android:text="1"
            android:textColor="@drawable/selector_alarmbtn_textcolor"
            android:textSize="14dp"
            geekui:customTypeface="fonts/NanumBarunGothic.ttf" />

        <com.mobsandgeeks.ui.TypefaceTextView
            android:id="@+id/btn_alarm_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/selector_alarmbtn"
            android:gravity="center"
            android:text="2"
            android:textColor="@drawable/selector_alarmbtn_textcolor"
            android:textSize="14dp"
            geekui:customTypeface="fonts/NanumBarunGothic.ttf" />
    </LinearLayout>

</RelativeLayout>