<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:orientation="vertical" >

    <!-- 테마 이름 영역 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#F7F7F7" >

        <EditText
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:id="@+id/et_themedetail_name"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:background="@color/transparent"
            android:cursorVisible="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="Reading"
            android:textColor="@color/ft_black"
            android:textCursorDrawable="@null"
            android:textSize="30dp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignBottom="@id/et_themedetail_name"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/arrow_up" />
    </RelativeLayout>

    <!-- 동그라미 영역 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center"
        android:background="@color/ft_white"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/ib_themedetail_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent" />

        <ImageButton
            android:id="@+id/ib_themedetail_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent" />

        <ImageButton
            android:id="@+id/ib_themedetail_orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent" />

        <ImageButton
            android:id="@+id/ib_themedetail_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent" />

        <ImageButton
            android:id="@+id/ib_themedetail_purple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent" />

        <ImageButton
            android:id="@+id/ib_themedetail_lightblue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent" />

        <ImageButton
            android:id="@+id/ib_themedetail_darkblue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent" />
    </LinearLayout>

    <!-- 구분 Bar -->

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#F7F7F7" />

    <!-- 내용 Cell -->

    <LinearLayout
        android:id="@+id/layout_themedetail_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- 최근 집중 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/ft_white"
            android:orientation="horizontal" >

            <!-- 최근 집중 : 타이틀 -->

            <com.mobsandgeeks.ui.TypefaceTextView
                android:id="@+id/tv_themedetail_curfocustimestr"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical|left"
                android:text="최근 집중"
                android:textColor="@color/ft_black"
                android:textSize="18dp"
                geekui:customTypeface="fonts/NanumBarunGothic.ttf" />

            <!-- 최근 집중 : 내용 -->

            <com.mobsandgeeks.ui.TypefaceTextView
                android:id="@+id/tv_themedetail_curfocustime"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="20dp"
                android:gravity="right|center_vertical"
                android:text="없음"
                android:textColor="@color/ft_595959"
                android:textSize="18dp"
                geekui:customTypeface="fonts/NanumBarunGothic.ttf" />
        </LinearLayout>

        <!-- 구분 Bar -->

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#F7F7F7" />

        <!-- 총 집중 시간 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/ft_white"
            android:orientation="horizontal" >

            <!-- 총 집중 시간 : 타이틀 -->

            <com.mobsandgeeks.ui.TypefaceTextView
                android:id="@+id/tv_themedetail_totalstr"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical|left"
                android:text="총 집중 시간"
                android:textColor="@color/ft_black"
                android:textSize="18dp"
                geekui:customTypeface="fonts/NanumBarunGothic.ttf" />

            <!-- 총 집중 시간 : 내용 -->

            <com.mobsandgeeks.ui.TypefaceTextView
                android:id="@+id/tv_themedetail_totalfocustime"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="20dp"
                android:gravity="right|center_vertical"
                android:text="없음"
                android:textColor="@color/ft_595959"
                android:textSize="18dp"
                geekui:customTypeface="fonts/NanumBarunGothic.ttf" />
        </LinearLayout>

        <!-- 구분선 -->

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F7F7F7" />

        <!-- 총 집중 횟수 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/ft_white"
            android:orientation="horizontal" >

            <!-- 총 집중 횟수 : 타이틀 -->

            <com.mobsandgeeks.ui.TypefaceTextView
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical|left"
                android:text="총 집중 횟수"
                android:textColor="@color/ft_black"
                android:textSize="18dp"
                geekui:customTypeface="fonts/NanumBarunGothic.ttf" />

            <!-- 총 집중 횟수 : 내용 -->

            <com.mobsandgeeks.ui.TypefaceTextView
                android:id="@+id/tv_themedetail_numoffocus"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="20dp"
                android:gravity="right|center_vertical"
                android:text="없음"
                android:textColor="@color/ft_595959"
                android:textSize="18dp"
                geekui:customTypeface="fonts/NanumBarunGothic.ttf" />
        </LinearLayout>

        <!-- 구분선 -->

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F7F7F7" />

        <!-- 평균 집중 시간 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/ft_white"
            android:orientation="horizontal" >

            <!-- 평균 집중 시간 : 타이틀 -->

            <com.mobsandgeeks.ui.TypefaceTextView
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical|left"
                android:text="평균 집중 시간"
                android:textColor="@color/ft_black"
                android:textSize="18dp"
                geekui:customTypeface="fonts/NanumBarunGothic.ttf" />

            <!-- 평균 집중 시간 : 내용 -->

            <com.mobsandgeeks.ui.TypefaceTextView
                android:id="@+id/tv_themedetail_avgfocustime"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="20dp"
                android:gravity="right|center_vertical"
                android:text="없음"
                android:textColor="@color/ft_595959"
                android:textSize="18dp"
                geekui:customTypeface="fonts/NanumBarunGothic.ttf" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_themedetail_delete"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@color/transparent"
            android:src="@drawable/ic_theme_delete_btn_3x" />
    </LinearLayout>

</LinearLayout>